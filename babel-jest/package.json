{
  "name": "babel-jest-standard",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "test": "jest"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.39",
    "@babel/node": "^7.0.0-beta.39",
    "@babel/preset-env": "^7.0.0-beta.39",
    "babel-jest": "^22.2.2",
    "jest": "^22.2.2"
